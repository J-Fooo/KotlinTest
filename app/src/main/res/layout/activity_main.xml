<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin Test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_grammar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_main"
        app:layout_constraintLeft_toLeftOf="@id/tv_main"
        app:layout_constraintRight_toRightOf="@id/tv_main"
        android:background="#D54439"
        android:text="语法、函数和变量"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:padding="13dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_base_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_grammar"
        app:layout_constraintLeft_toLeftOf="@id/tv_grammar"
        app:layout_constraintRight_toRightOf="@id/tv_grammar"
        android:background="#1E88E5"
        android:text="基本数据类型、控制流和类相关"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:padding="13dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textStyle="bold"
        />
</android.support.constraint.ConstraintLayout>