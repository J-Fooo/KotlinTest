<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrammarActivity"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变量，常量声明；可空变量声明；lateinit延迟变量的初始化；"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_var"
        app:layout_constraintLeft_toLeftOf="@id/tv_explain"
        app:layout_constraintTop_toBottomOf="@id/tv_explain"
        android:text="var声明变量"
        style="@style/NormalTextViewStyle"
        />


    <TextView
        android:id="@+id/tv_val"
        app:layout_constraintLeft_toLeftOf="@id/tv_var"
        app:layout_constraintTop_toBottomOf="@id/tv_var"
        android:text="val声明变量"
        style="@style/NormalTextViewStyle"
        />

    <TextView
        android:id="@+id/tv_null"
        app:layout_constraintLeft_toLeftOf="@id/tv_val"
        app:layout_constraintTop_toBottomOf="@id/tv_val"
        android:text="声明可空变量"
        style="@style/NormalTextViewStyle"
        />

    <TextView
        android:id="@+id/tv_lateinit"
        app:layout_constraintLeft_toLeftOf="@id/tv_null"
        app:layout_constraintTop_toBottomOf="@id/tv_null"
        android:text="成员变量延迟初始化"
        style="@style/NormalTextViewStyle"
        />


</android.support.constraint.ConstraintLayout>